package_name: snipshue
class_name: SnipsHue
description: Philips Hue skill for Snips
parameters: ["hostname", "username"]
intents:
  - intent: lightsTurnOff
    action: |
      {%
      if len(snips.intent.house_room) > 0:
        house_room = snips.intent.house_room[0]

        snips.skill.light_off(house_room)
      %}
  - intent: lightsTurnOnSet
    action: |
      {%
      if len(snips.intent.house_room) > 0 and len(snips.intent.number) > 0:
        number = snips.intent.number[0]
        house_room = snips.intent.house_room[0]

        snips.skill.light_on_set(None, number, house_room)
      %}
  - intent: lightsTurnDown
    action: |
      {%

      if len(snips.intent.house_room) > 0:
        house_room = snips.intent.house_room[0]

        snips.skill.light_down(20, house_room)
      %}
  - intent: lightsTurnUp
    action: |
      {%
      if len(snips.intent.house_room) > 0:
        house_room = snips.intent.house_room[0]

        snips.skill.light_up(20, snips.intent.house_room)
      %}
